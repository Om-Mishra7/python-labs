# .cdmrc for Flask Playground with OAuth (Om-Mishra7)

# Terminals Configuration

terminals:
[
'pip install -r requirements.txt', # Install dependencies from requirements file
'export FLASK_APP=app.py', # Set the Flask app file (replace app.py with your app file)
'flask run', # Run the Flask app
]

# Default Files Configuration

tabs: ['app.py', 'requirements.txt'] # Open the main Flask app file and requirements file by default

# Playground View Configuration

playground-view: terminal-editor-browser # Show terminal, editor, and browser preview

# Run Button Configuration

run-button: python3 $$file

# Browser Link Configuration

browser-link: http://localhost:5000 # Set the default Flask app URL to be opened in the browser
